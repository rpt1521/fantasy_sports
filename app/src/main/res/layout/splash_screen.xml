<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/splash_linear_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/splash_image"

        android:layout_width="200dp"
        android:layout_height="200dp"

        android:layout_gravity="center"
        tools:srcCompat="@tools:sample/avatars[0]"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/splash_header"

        android:layout_gravity="center"

        android:text="French Toast Mafia\nFantasy Sports for Dummies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textSize="25dp"/>

    <Button android:id="@+id/splash_avatar_button"

        android:layout_width="300dp"
        android:layout_height="75dp"
        android:text="choose avatar"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"/>

    <Button android:id="@+id/splash_continue_avatar_button"

        android:layout_width="300dp"
        android:layout_height="75dp"
        android:text="continue"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"/>

    <Button android:id="@+id/splash_name_button"

        android:layout_width="300dp"
        android:layout_height="75dp"
        android:text="Enter Name"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"/>

    <Button android:id="@+id/splash_team_name_button"

        android:layout_width="300dp"
        android:layout_height="75dp"
        android:text="Enter Team Name"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"/>

    <Button android:id="@+id/splash_continue_button"

        android:layout_width="300dp"
        android:layout_height="75dp"
        android:text="Continue"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"/>

</LinearLayout>